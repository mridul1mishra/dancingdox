const pool = require('../utils/sql');

async function getProjectByIdFromSQL(id) {
  try {
    const [rows] = await pool.execute(
      'SELECT * FROM projects WHERE ID = ?',
      [id]
    );

    if (rows.length === 0) {
      return null; // Not found
    }

    return rows[0]; // Return the first (and only) matching row
  } catch (err) {
    console.error('SQL fetch error:', err);
    throw err;
  }
}

module.exports = {
  getProjectByIdFromSQL
};